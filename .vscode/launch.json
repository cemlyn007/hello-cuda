    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Matrix Multiplication",
            "preLaunchTask": "Build Matrix Multiplication",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bazel-bin/matrix_multiplication/main",
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "sourceFileMap": {
                "/proc/self/cwd": "${workspaceFolder}",
                ".": "${workspaceFolder}"
            },
        },
        {
            "name": "CUDA Debug Matrix Multiplication",
            "preLaunchTask": "Build Matrix Multiplication",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bazel-bin/matrix_multiplication/main",
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerPath": "cuda-gdb",
            "sourceFileMap": {
                "/proc/self/cwd": "${workspaceFolder}",
                ".": "${workspaceFolder}"
            },
        },
        {
            "name": "CUDA C++: Launch",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/bazel-bin/matrix_multiplication/main",
            "preLaunchTask": "Build Matrix Multiplication",
